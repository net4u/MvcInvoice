@model Invoice.Site.Models.Toolbar.ToolBarViewModel
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">

            @foreach (var item in @Model.Items)
            {
                if (item.DropDownItems == null)
                {
                    <li><a href=@Url.Action(@item.Action, @item.Controller)>@item.Name</a></li>
                }
                else
                {
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            @item.Name
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            @foreach (var subItem in @item.DropDownItems)
                            {
                                <li><a href=@Url.Action(@subItem.Action, @subItem.Controller)>@subItem.Name</a></li>
                            }
                        </ul>
                    </li>
                }
            }

        </ul>
        @Html.Partial("_LoginPartial")
    </div>