@model Invoice.Site.Models.Post.PostEditModel
@{
    ViewBag.Title = "Home Page";
}
@section scripts
{
    @Scripts.Render("~/Scripts/ThirdParty/jquery.matchHeight.js")
    @Scripts.Render("~/Scripts/Custom/CurrencyIndex.js")
    @Scripts.Render("~/Scripts/Custom/HomeIndex.js")
}

<div id="content">
    <div class="jumbotron">
        <h1>ASP.NET</h1>
        <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
        <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
    </div>

    <div class="row">
        <div class="col-md-3 col-md-push-9">
            @Html.Partial(MVC.Home.Views.Commercial)
        </div>
        <div class="col-md-9 col-md-pull-3">

            <div class="row home-post-add" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">Add Post</a>
                        </h4>
                    </div>
                    <div id="collapse1" class="panel-collapse collapse">
                        <div class="panel-body">
                            @Html.Partial(MVC.Home.Views.Post)                            
                        </div>
                    </div>
                </div>
            </div>

            <div id="content-container">
                <input type="hidden" id="post-content-url" value="@Url.Action(MVC.Home.ActionNames.GetPosts, MVC.Home.Name)" />
                @*for ajax fill*@
            </div>

            <div id="content-load-progress" class="ajax-page-loading">
                <img id="ajax-loading-ico" src="~/Images/Loading.gif" alt="Loading..." class="img-responsive center-block img-center" />
            </div>

        </div>
    </div>
</div>